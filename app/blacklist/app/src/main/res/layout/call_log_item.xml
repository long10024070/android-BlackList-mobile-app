<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="0dp"
    android:layout_marginTop="0dp"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageCallType"
        android:layout_width="48dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@android:drawable/sym_call_incoming" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/callLogPhoneName"
        android:layout_toRightOf="@+id/imageCallType"
        tools:text="Contact Name"
        android:textSize="18sp"
        android:textColor="#212121"
        android:textStyle="bold"
        android:layout_marginTop="9dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/callLogPhoneNumber"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/callLogPhoneName"
        android:layout_toRightOf="@+id/imageCallType"
        tools:text="Contact Number"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginTop="2dp"/>

    
</RelativeLayout>
